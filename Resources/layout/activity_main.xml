<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/main_container"
	>   
  
    

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/scrollView1"
        android:minHeight = "25px"
        android:minWidth = "25px"
        >
        
          <RelativeLayout
      
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:scaleType="centerCrop"
                android:src = "@drawable/activityrr"
                android:id="@+id/img_bg"/> 
	
			<RelativeLayout
      
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="vertical"
				android:padding="32dp"
				android:background = "@drawable/activity_stili"
				android:layout_below="@+id/img_bg"
				android:id="@+id/main_form"
				>

		     <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
				 android:id = "@+id/Text"
				 android:textSize = "18sp"
			     android:padding = "10dp"
				 android:gravity="center"
				 android:textStyle="bold"
				 android:layout_centerHorizontal = "true"	
				 android:background = "@drawable/edittext_stili"
				 android:text = "ООО ИКЦ «Мысль» НГТУ
SmartBox "
				/>

            <Button
				android:text="Калькулятор стоимости перевозки"
				android:layout_width="fill_parent"
			    android:padding = "5dp"
				android:layout_height="45dp"
				android:textSize = "16dp"
				android:layout_marginTop="20dp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:background="@drawable/button_stili"
				android:layout_below="@+id/Text"
				android:id="@+id/btn_calculator" />
			<Button
				android:text="Войти в приложение"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
				android:layout_marginTop="20dp"
				android:textSize = "16dp"
				android:layout_below = "@+id/btn_calculator"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:background="@drawable/button_stili"
				android:id="@+id/btn_auth_form" />
			<Button
				android:text="Регистрация"
				android:layout_width="fill_parent"
				android:layout_height="45dp"
		     	android:textSize = "16dp"
				android:layout_marginTop="20dp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:background="@drawable/button_stili"
				android:layout_below="@+id/btn_auth_form"
				android:id="@+id/btn_reg_form" />
		   
        
      
	</RelativeLayout>
    </RelativeLayout>
        </ScrollView>

  
</RelativeLayout>


